<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start 1"
        android:id="@+id/startButton"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop 1"
        android:id="@+id/stopButton"
        android:layout_toEndOf="@+id/startButton"
        android:layout_marginStart="97dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start 2"
        android:id="@+id/startButton2"
        android:layout_below="@+id/startButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop 2"
        android:id="@+id/stopButton2"
        android:layout_alignBottom="@+id/startButton2"
        android:layout_alignStart="@+id/stopButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start 3"
        android:id="@+id/startButton3"
        android:layout_below="@+id/startButton2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop 3"
        android:id="@+id/stopButton3"
        android:layout_alignTop="@+id/startButton3"
        android:layout_alignStart="@+id/stopButton2"/>

</RelativeLayout>
